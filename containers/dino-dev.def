Bootstrap: docker
From: python:3.10

%files
    ${PWD} dino

%post
    export PIP_ROOT_USER_ACTION="ignore"
    python -m pip install --upgrade pip
    pip install --no-cache-dir -e ./dino[dev]

%test
    echo "Checking installation..."
    python -c "import dino; dino.__version__" && echo "Success!"
